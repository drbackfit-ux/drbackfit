# Node Environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firebase Client Configuration (Optional - for Firebase features)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin Configuration (Required for product data from Firestore)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Admin Authentication (Required for admin panel access)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Database (Optional - when you add database)
DATABASE_URL=

# Email Service (Optional - when you add email)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Newsletter Service (Optional - when you add newsletter)
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Authentication (Optional - when you add NextAuth)
NEXTAUTH_SECRET=
NEXTAUTH_URL=

# File Storage (Required for image uploads in admin)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Processing (Optional - when you add Stripe)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=